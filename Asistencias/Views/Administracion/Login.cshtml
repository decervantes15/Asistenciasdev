
@{
    ViewBag.Title = "Login";

    string dominio = "@bancodelbienestar.gob.mx";
}

@section scripts{
    <script src="~/JS/Administracion/Login.js"></script>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4"><b>Grupo Intermex</b><br>Administración</h1>
                                </div>
                                <form class="user" id="login">
                                    <div class="form-group ">
                                        <input type="text" class="form-control form-control" id="user" placeholder="*ID de correo electrónico" name="user" title='El ID de usuario es el correo sin dominio "@dominio"' />
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control" id="password" placeholder="*Contraseña" name="passwd" title="La contraseña es la misma de tu correo del Banco del Bienestar">
                                    </div>
                                    <div class="row">
                                        <button type="button" class="btn btn-primary btn-user btn-block" id="enter">Ingresar</button>
                                    </div>
                                    <p id="aviso" class="text-center w-100">&emsp;</p>
                                </form>
                                <hr />
                                <p class="text-center" id="divRegistro">
                                    Los campos con <b>*</b> son obligatorios
                                </p>
                                <hr />

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
